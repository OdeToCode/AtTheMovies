<table class="table table-striped table-hover">
    <tr>
        <th>Title</th>
        <th>Rating</th>
        <th>Year</th>
    </tr>
    {{#each movie in controller}}
        <tr>
            <td>{{movie.title}}</td>
            <td>{{movie.rating}}</td>
            <td>{{movie.year}}</td>
        </tr>
    {{/each}}
</table>