<h2>Editing {{title}}</h2>

<form name="edit" class="form-horizontal">

	<div class="form-group">
		<label for="title" class="col-md-2 control-label">Title</label>
		<div class="col-md-10">
			{{text-field value=title name='title' }}
		</div>
	</div>
	<div class="form-group">
		<label for="title" class="col-md-2 control-label">Release Year</label>
		<div class="col-md-10">
			{{input value=year name='year'}}
		</div>
	</div>
	<div class="form-group">
		<label for="title" class="col-md-2 control-label">Rating</label>
		<div class="col-md-10">
			{{input value=rating name='rating'}}
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10 col-md-offset-2">
			<button class="btn btn-primary" data-bind="click: save" ng-disabled="edit.$invalid">Save</button>
			<button class="btn" data-bind="click: cancel">Cancel</button>			
		</div>
	</div>

</form>