{{#if error}}
<div class="alert alert-danger">
	{{error}}
</div>
{{/if}}

<form name="edit" class="form-horizontal">

	<div class="form-group">
		<label for="title" class="col-md-2 control-label">Title</label>
		<div class="col-md-10">
			{{text-field value=title name='title' }}
		</div>
	</div>
	<div class="form-group">
		<label for="title" class="col-md-2 control-label">Release Year</label>
		<div class="col-md-10">
			{{number-field value=year name='year'}}
		</div>
	</div>
	<div class="form-group">
		<label for="title" class="col-md-2 control-label">Rating</label>
		<div class="col-md-10">
			{{number-field value=rating name='rating'}}
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10 col-md-offset-2">
			<button {{action "save"}} class="btn btn-primary">Save</button>
			<button {{action "cancel"}} class="btn">Cancel</button>			
		</div>
	</div>

</form>